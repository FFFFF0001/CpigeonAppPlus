<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_race_info_briefly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="48dp">

                <TextView
                    android:id="@+id/race_info_raceOrg"
                    style="@style/Marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor_light_black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/race_info_raceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/race_info_raceOrg"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/background_text_view_matchtype_x"
                    android:text="训"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/race_info_raceName"
                    style="@style/Marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/race_info_raceOrg"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/race_info_raceType"
                    android:text="山西大同火车头公棚"
                    android:textColor="@color/textColor_gray"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/race_info_race_right_text"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:singleLine="true"
                android:text="5254羽"
                android:textColor="@color/light_red"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>